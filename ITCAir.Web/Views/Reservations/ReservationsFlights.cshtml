@model ITCAir.Web.Models.Reservations.FirstStepReservationModel
@using ITCAir.Web.Models.Flights
@inject AllFlightsViewModel Flights
@{
    ViewData["Title"] = "Index";
    this.Flights = (AllFlightsViewModel)this.ViewData["AllFlightInfo"];

}
<style>
    .One input {
        float: left;
    }
</style>
<div class="One">
    <form asp-controller="Reservations" asp-action="ProcessFirstStepReservationOnTop">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="From" for="inputFrom">From</label>
                <input asp-for="From" class="form-control" id="inputFrom">
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="To" for="inputTo">To</label>
                <input asp-for="To" class="form-control" id="inputTo">
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="ReturnDate" class="control-label"></label>
                @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="ReturnDate" class="control-label"></label>
                @Html.EditorFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="People" class="control-label"></label>
                <input asp-for="People" class="form-control" />
                <span asp-validation-for="People" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <input type="submit" value="GO" class="btn btn-primary" />
            </div>
        </div>
    </form>

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Departure
            </th>
            <th>
                Arrival
            </th>
            <th></th>
        </tr>
    </thead>
    <br />
    <h2>From @Model.From To @Model.To</h2>
    <tbody>
        @foreach (FlightViewModel item in Flights.Items)
        {
            <tr>
                <td>
                    @item.Departure.Date.ToLongDateString();
                </td>
                <td>
                    @item.Departure.ToShortTimeString()
                </td>
                <td>
                    @item.Arrival.ToShortTimeString()
                </td>
                <td>
                    <a asp-controller="Reservations" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete">Delete</a>@*asp-route-id="@item.Id"*@
                </td>
            </tr>
        }
    </tbody>
    <ul class="pagination">
        @for (var i = 1; i <= Flights.Pager.PagesCount; i++)
        {
            <li class="page-item @(i == Flights.Pager.CurrentPage ? "active" : "")">
                <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</table>

