@model ITCAir.Web.Models.User.UserSignInViewModel

@{
    ViewData["Title"] = "Sign in";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4" style="background:linear-gradient(#c82076 , purple); padding-bottom: 10px; padding-top: 20px; border-radius: 15px; box-shadow: #4d4d4d 3px 3px;">
        <h2 style=" text-align: center;
        color: white">Sign in</h2>
        @{
            if (!string.IsNullOrEmpty(ViewData["Message"].ToString()))
            {
                <p style="color:white; text-align:center">@ViewData["Message"]</p>
            }
        }
        <hr style="background: radial-gradient( #fff, #c82076)"/>
        <form asp-controller="Users" asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style = "color:white" asp-for="Username" class="control-label"></label>
                <input style = "" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:20px">
                <label style = "color:white" asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                    <input type="submit" style= "color : #4a0664; background-color: #fff; border-color: purple;" value="Sign in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}