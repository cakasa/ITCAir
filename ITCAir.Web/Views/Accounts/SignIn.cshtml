@model ITCAir.Web.Models.User.UserSignInViewModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 gradient-groupbox">
        <h2 style=" text-align: center; color: white">
            Sign in
        </h2>
        <h6 style="text-align: center; color: white; opacity: 0.8; font-size: 14px;">
            Note: This is for existing ITCAir employees only.
        </h6>
        <hr style="background: radial-gradient( #fff, #c82076)" />
        <form asp-controller="Accounts" asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username</label>
                <input style="" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="RememberUser" />
                    <label asp-for="RememberUser" class="control-label">Remember me</label>
                </div>
            </div>

            @{
                if (!string.IsNullOrEmpty(ViewData["Message"].ToString()))
                {
                    <p class ="text-danger" style="color:white; text-align:center; padding-bottom:10px">@ViewData["Message"]</p>
                }
            }
            <div class="form-group text-center">
                <input type="submit" value="Sign in" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}